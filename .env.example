# AI-Automated Affiliate Marketing System
# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE (Supabase PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://user:password@host:5432/database
# Get this from your Supabase project settings
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ============================================================================
# REDIS (Caching)
# ============================================================================
REDIS_URL=redis://localhost:6379
# If using Redis Cloud or Upstash, use their connection URL

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-random
JWT_EXPIRES_IN=7d

# ============================================================================
# AFFILIATE NETWORKS
# ============================================================================

# ClickBank
CLICKBANK_API_KEY=your_clickbank_api_key
CLICKBANK_DEV_KEY=your_clickbank_dev_key

# ShareASale
SHAREASALE_TOKEN=your_shareasale_token
SHAREASALE_SECRET=your_shareasale_secret
SHAREASALE_AFFILIATE_ID=your_affiliate_id

# CJ Affiliate
CJ_API_KEY=your_cj_api_key
CJ_WEBSITE_ID=your_website_id

# Impact
IMPACT_ACCOUNT_SID=your_account_sid
IMPACT_AUTH_TOKEN=your_auth_token

# Amazon Associates
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_PARTNER_TAG=your_partner_tag

# ============================================================================
# ADVERTISING PLATFORMS
# ============================================================================

# Meta (Facebook/Instagram) Ads
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_long_lived_access_token
META_AD_ACCOUNT_ID=act_your_ad_account_id

# Google Ads
GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_CUSTOMER_ID=your_customer_id

# TikTok Ads
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_ADVERTISER_ID=your_advertiser_id

# ============================================================================
# AI SERVICES
# ============================================================================

# Claude (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Midjourney (via third-party API or Discord bot)
MIDJOURNEY_API_KEY=your_midjourney_api_key
MIDJOURNEY_API_URL=https://api.midjourney.com/v1
# OR if using Discord bot:
MIDJOURNEY_DISCORD_TOKEN=your_discord_bot_token
MIDJOURNEY_SERVER_ID=your_server_id
MIDJOURNEY_CHANNEL_ID=your_channel_id

# Runway
RUNWAY_API_KEY=your_runway_api_key

# ElevenLabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# OpenAI (optional, for backup/alternative)
OPENAI_API_KEY=your_openai_api_key

# ============================================================================
# STORAGE
# ============================================================================

# Cloudflare R2
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your-bucket.r2.dev

# ============================================================================
# n8n AUTOMATION
# ============================================================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password
N8N_ENCRYPTION_KEY=your_n8n_encryption_key

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# Slack (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# MCP SERVERS
# ============================================================================
MCP_OPERATIONS_PORT=3100
MCP_CONTENT_PORT=3101
MCP_ANALYTICS_PORT=3102
MCP_AUTOMATION_PORT=3103
MCP_INTEGRATIONS_PORT=3104

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# Sentry (optional, for error tracking)
SENTRY_DSN=your_sentry_dsn

# ============================================================================
# SECURITY
# ============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
# In production, set to your frontend domain

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AUTO_OPTIMIZATION=true
ENABLE_AUTO_SCALING=true
ENABLE_AUTO_PAUSE=true
ENABLE_CREATIVE_REFRESH=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=false

# ============================================================================
# DEVELOPMENT
# ============================================================================
DEBUG=false
MOCK_EXTERNAL_APIS=false
# Set to true for development without real API calls

